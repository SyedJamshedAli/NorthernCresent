@model WebApplication.Models.UserRoleViewModel
@{
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
    
}


<div class="row">

    <!--begin::Container-->
    <div class="d-flex flex-row flex-column-fluid container">
        <!--begin::Content Wrapper-->
        <div class="main d-flex flex-column flex-row-fluid">
           
            <div class="content flex-column-fluid" id="kt_content">
                <!--begin::Dashboard-->
                <!--begin::Row-->
                <div class="row">

                    <div class="col-md-12">
                        <div class="card card-custom">
                            <div class="card-header">
                                <h3 class="card-title">
                                    Assign Role
                                </h3>
                                <div class="card-toolbar">
                                    <div class="example-tools justify-content-center">
                                        <span class="example-toggle" data-toggle="tooltip" title="View code"></span>
                                        <span class="example-copy" data-toggle="tooltip" title="Copy code"></span>
                                    </div>
                                </div>
                            </div>
                            <!--begin::Form-->
                            <form method="post">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label>Email address <span class="text-danger">*</span></label>
                                        <input type="email" asp-for="UserEmail" value="@Model.UserEmail" class="form-control" placeholder="Enter email" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelect2">select Role <span class="text-danger">*</span></label>
                                        <select asp-for="@Model.RoleID" value="@Model.RoleName" name="RoleID"  class="form-control" id="exampleSelect2">
                                            @if (Model.roles != null)
                                            {
                                                @foreach (var item in Model.roles)
                                                {
                                                    <option value="@item.ID">@item.RoleName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelect1">select Role <span class="text-danger">*</span></label>
                                        <select asp-for="Status" value="@Model.Status" class="form-control" id="exampleSelect1">
                                            <option>Active</option>
                                            <option>InActive</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-center">
                                    @if (Model.ID == 0)
                                    {
                                        <button type="submit" class="btn btn-primary mr-2">Save</button>
                                    }
                                    else
                                    {
                                        <button asp-controller="Account" asp-action="AssignRole" asp-route-id="@Model.ID" type="submit" class="btn btn-primary mr-2">Update</button>
                                    }
                                    <button type="reset" class="btn btn-secondary">Cancel</button>
                                </div>
                                <hr />
                                <div class="card card-custom">
                                    <div class="card-body">
                                        <!--begin: Datatable-->
                                        <table class="table table-separate table-head-custom table-checkable" id="kt_datatable">
                                            <thead>
                                                <tr>
                                                    <th>Record ID</th>
                                                    <th>User Email</th>
                                                    <th>Role</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.GetuserAllDatas != null)
                                                {
                                                    @foreach (var item in Model.GetuserAllDatas)
                                                    {
                                                        <tr>
                                                            <td>@item.ID</td>
                                                            <td>@item.UserEmail</td>
                                                            <td>@item.RoleName</td>
                                                            <td>@item.Status</td>
                                                            <td><a asp-controller="Account" asp-action="EditAssignRole" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a><a asp-controller="Account" asp-action="DeleteUser" asp-route-id="@item.ID"><i class="fa fa-trash ml-4"></i></a></td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </form>
                            <!--end::Form-->
                        </div>
                    </div>
                </div>

            </div>
            <!--end::Content-->
        </div>
        <!--begin::Content Wrapper-->
    </div>
    <!--end::Container-->








